<BSButton Color="Color.Secondary" OnClick="onclick">Add an Item</BSButton>
<BSCollapse IsOpen="@IsOpen">
    <input type="text" @bind-value=@AddValue />
    <button type="button" class="btn btn-primary" @onclick=@Add>Add</button>
</BSCollapse>

@code {
    [Parameter]
    public EventCallback<string> onAddItem { get; set; }
    bool IsOpen { get; set; }
    string AddValue { get; set; }
    void onclick(MouseEventArgs e)
    {
        IsOpen = !IsOpen;
        StateHasChanged();
    }

    private async Task Add()
    {
        await onAddItem.InvokeAsync(AddValue);
        AddValue = string.Empty;
    }
}
